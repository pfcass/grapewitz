<% content_for :header do %>
    <div>
      <h3 style="text-align: center"><%= "Edit user parameters for #{@user.name}" %></h3>
      <% if @user.greeting != nil %>
          <p> <%=   @user.greeting %> </p>
      <% end %>
    </div>
<% end %>

<% content_for :left_sidebar do %>
    <div>

    </div>
<% end %>


<h1>edit for <%= current_user.email %></h1>
<p><strong>CURRENTLY UNABLE TO MODIFY PASSWORD W/OUT GETTING LOGGED OUT</strong></p>
<%= form_for(@user, :url => user_path(:method => :put)) do |f| %>

    <div><%= f.label :password %>
      <br/>
      <%= f.password_field :password %></div>

    <div><%= f.label :password_confirmation %>
      <br/>
      <%= f.password_field :password_confirmation %></div>

    <div><%= f.label :user_name %>
      <br/>
      <%= f.text_field :user_name %></div>

    <div><%= f.label :greeting %>
      <br/>
      <%= f.text_area :greeting %></div>

    <div><%= f.submit "Save Changes" %></div>
<% end %>
