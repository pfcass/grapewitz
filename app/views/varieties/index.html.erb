<%- model_class = Variety -%>

<% content_for :header do %>

    <div class="page-header">
      <h1><%= t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
    </div>
<% end %>


<table class="table table-striped">
  <thead>
  <tr>
    <th><%= model_class.human_attribute_name(:style) %></th>
    <th><%= model_class.human_attribute_name(:click_to_create_a_new_wine_of_this_variety) %></th>
    <th><%= t '.actions', :default => t("helpers.actions") %></th>
  </tr>
  </thead>
  <tbody>
  <% @varieties.each do |variety| %>
      <tr>
        <td><%= image_tag(variety.icon, size: "25x25") %></td>
        <td><%= link_to variety.name, new_wine_path(:variety_id => variety.id) %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_variety_path(variety), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      variety_path(variety),
                      :method => :delete,
                      :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_variety_path,
            :class => 'btn btn-primary' %>
