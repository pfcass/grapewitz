<%= form_for(@wine) do |f| %>
    <% if @wine.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@wine.errors.count, "error") %> prohibited this wine from being saved:</h2>

          <ul>
            <% @wine.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <% if @wine.new_record? %>
        <div class="field">
          <%= f.label :brand_id %>
          <br>
          <%= collection_select(:wine, :brand_id, Brand.all, :id, :name, :prompt => true) %>
        </div>

        <div class="field">
          <%= f.label :variety_id %>
          <br>
          <%= collection_select(:wine, :variety_id, Variety.all, :id, :name, :prompt => true) %>
        </div>

        <div class="field">
          <%= f.label :region_id %>
          <br>
          <%= collection_select(:wine, :region_id, Region.all.sort_by{|r| r.name },
                                :id, :name, :prompt => true) %>
        </div>

        <div class="field">
          <%= f.label :color %>
          <br>
          <%= f.select( :color, [['Red', Wine::RED], ['White',Wine::WHITE],['Rose',Wine::ROSE]]) %>
        </div>

        <div class="field">
          <%= f.label :fizz %>
          <br>
          <%= f.select( :fizz, [['Still', Wine::STILL], ['Sparkling',Wine::FIZZY]]) %>
        </div>

    <% end %>

    <div class="field">
      <%= f.label :note %>
      <br>
      <%= f.text_field(:note) %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
