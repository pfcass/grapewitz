<% content_for :header do %>
    <div>
      <h2><%= @wine.name %></h2>

      <p>
        <% if @comments.first.user_id != current_user.id %>
            <%= @comments.first.user.email %> says:
        <% end %>
        <%= @comments.first.comment %>
      </p>
    </div>
<% end %>


<p id="notice"><%= notice %></p>

<% if @comments != NIL && @comments.size > 1 %>
    <p>
      <strong>Here is what your friends have to say about <%= @wine.name %></strong>
    </p>
    <% @comments.each_with_index do |c, index| %>
        <p>
          <% if index == 0 %>
              <% next %>
          <% end %>
          <% if c.user_id != current_user.id %>
              <%= c.user.email %> says:
          <% end %>
          <%= c.comment %>
        </p>
    <% end %>
<% end %>

<%= form_for(@comment, {:url => comments_path({:wine_id => @wine.id}) }) do |f| %>
    <% if @comment.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

          <ul>
            <% @comment.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :comment %><br>
      <%= f.text_area :comment %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>


<%# iterate through @wine.bottles %>
<table>
  <p>
    <strong>... and here are the bottles your friends have purchased</strong>
  </p>

  <% @wine.bottles.each do |bottle| %>
      <% if bottle.visible?(current_user.id) == true %>
          <% if params[:show_all] == 'true' || current_user.id == bottle.user_id %>
              <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
                <td class="list_description">
                  <dl>
                    <dd><%= bottle.to_label %></dd>
                  </dl>
                  <dl>
                    <% if bottle.user_id != current_user.id %>
                        <dd>
                          <%= bottle.user.email %> says:
                        </dd>
                    <% end %>
                    <%= strip_tags(bottle.comment) %>
                  </dl>
                </td>
              </tr>
          <% end %>
      <% end %>
  <% end %>
</table> <br/>


